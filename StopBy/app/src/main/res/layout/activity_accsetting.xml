<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.squad.stopby.AccSettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/accSetting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:visibility="visible"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatroom_profileImg"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@+id/accSetting_toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/accSetting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatroom_profileImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:padding="5dp"
        android:text="Dummy"
        android:textColor="@android:color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accSetting_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accSetting_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:text="Lebron James"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/accSetting_changeImgBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/accSetting_changeTextBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/startup_button_background"
        android:text="@string/accSetting_changeImg"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/accSetting_changeTextBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/accSetting_changeImgBtn"
        android:layout_marginBottom="30dp"
        android:background="@drawable/startup_button_background"
        android:text="@string/accSetting_changetext"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>
